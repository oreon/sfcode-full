<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jasperReport PUBLIC "-//JasperReports//DTD Report Design//EN" "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport name="TimeSheetReport" isTitleNewPage="false" isSummaryNewPage="false"> 
  <parameter name="ReportTitle" class="java.lang.String"/>  
  <parameter name="developer" class="org.wc.trackrite.domain.Employee"/>  
  <parameter name="from" class="java.util.Date"/>  
  <parameter name="to" class="java.util.Date"/>  
  <queryString language="ejbql"> <![CDATA[select t from TimeTrackingEntry t, Employee e where t.createdByUser.id = e.user.id and e = $P{developer}  and t.workDay.date >= $P{from} and t.workDay.date <= $P{to} order by t.dateCreated]]> </queryString>  
  <field name="issue.title" class="java.lang.String"/>  
  <field name="details" class="java.lang.String"/>  
  <field name="hours" class="java.lang.Integer"/>  
  <field name="workDay.date" class="java.util.Date"/>  
  <variable name="GroupworkDay.dateCounter" class="java.lang.Integer" incrementType="Group" incrementGroup="GroupworkDay.date" calculation="Count"> 
    <variableExpression><![CDATA[Boolean.TRUE]]></variableExpression> 
  </variable>  
  <variable name="GroupworkDay.date_sum" class="java.lang.Integer" calculation="Sum" resetType="Group" resetGroup="GroupworkDay.date"> 
    <variableExpression> <![CDATA[$F{hours}]]> </variableExpression> 
  </variable>  
  <variable name="sum:hours_sum" class="java.lang.Integer" calculation="Sum"> 
    <variableExpression> <![CDATA[$F{hours}]]> </variableExpression> 
  </variable>  
  <group name="GroupworkDay.date" minHeightToStartNewPage="60"> 
    <groupExpression><![CDATA[$F{workDay.date}]]></groupExpression>  
    <groupHeader> 
      <band height="20"> 
        <textField evaluationTime="Group" evaluationGroup="GroupworkDay.date" bookmarkLevel="1"> 
          <reportElement mode="Opaque" x="0" y="5" width="515" height="15" backcolor="#c0c0c0"/>  
          <box leftPadding="10" bottomBorder="1Point"/>  
          <textFieldExpression class="java.lang.String"> <![CDATA["  " + String.valueOf($V{GroupworkDay.dateCounter}) + ". " + String.valueOf($F{workDay.date})]]> </textFieldExpression>  
          <anchorNameExpression><![CDATA[String.valueOf($F{workDay.date})]]></anchorNameExpression> 
        </textField> 
      </band> 
    </groupHeader>  
    <groupFooter> 
      <band height="20"> 
        <staticText> 
          <reportElement x="270" y="1" width="60" height="15"/>  
          <textElement textAlignment="Right"/>  
          <text><![CDATA[Sum:hours:]]></text> 
        </staticText>  
        <textField> 
          <reportElement x="360" y="1" width="30" height="15"/>  
          <textElement textAlignment="Right"/>  
          <textFieldExpression class="java.lang.Integer"> <![CDATA[$V{GroupworkDay.date_sum}]]> </textFieldExpression> 
        </textField> 
      </band> 
    </groupFooter> 
  </group>  
  <title> 
    <band height="70"> 
      <line> 
        <reportElement x="0" y="0" width="515" height="1"/>  
        <graphicElement/> 
      </line>  
      <staticText> 
        <reportElement x="0" y="10" width="515" height="30"/>  
        <textElement textAlignment="Center"> 
          <font size="20"/> 
        </textElement>  
        <text><![CDATA[TimeSheet For $P{developer}.getDisplayName() $P{from} - $P{to}]]></text> 
      </staticText> 
    </band> 
  </title>  
  <pageHeader> 
    <band height="20"> 
      <rectangle> 
        <reportElement x="0" y="5" width="515" height="15" forecolor="#333333" backcolor="#333333"/>  
        <graphicElement/> 
      </rectangle>  
      <staticText> 
        <reportElement mode="Opaque" x="0" y="5" width="205" height="15" forecolor="#ffffff" backcolor="#333333"/>  
        <text><![CDATA[Issue]]></text> 
      </staticText>  
      <staticText> 
        <reportElement mode="Opaque" x="90" y="5" width="205" height="15" forecolor="#ffffff" backcolor="#333333"/>  
        <text><![CDATA[Details]]></text> 
      </staticText>  
      <staticText> 
        <reportElement mode="Opaque" x="180" y="5" width="205" height="15" forecolor="#ffffff" backcolor="#333333"/>  
        <text><![CDATA[Hours]]></text> 
      </staticText> 
    </band> 
  </pageHeader>  
  <detail> 
    <band height="30"> 
      <textField isBlankWhenNull="true"> 
        <reportElement x="0" y="0" width="69" height="24"/>  
        <textElement textAlignment="Center"/>  
        <textFieldExpression class="java.lang.String"> <![CDATA[$F{issue.title}]]> </textFieldExpression> 
      </textField>  
      <textField isBlankWhenNull="true"> 
        <reportElement x="90" y="0" width="69" height="24"/>  
        <textElement textAlignment="Center"/>  
        <textFieldExpression class="java.lang.String"> <![CDATA[$F{details}]]> </textFieldExpression> 
      </textField>  
      <textField isBlankWhenNull="true"> 
        <reportElement x="180" y="0" width="69" height="24"/>  
        <textElement textAlignment="Center"/>  
        <textFieldExpression class="java.lang.Integer"> <![CDATA[$F{hours}]]> </textFieldExpression> 
      </textField> 
    </band> 
  </detail>  
  <summary> 
    <band height="320"> 
      <staticText> 
        <reportElement mode="Opaque" x="0" y="1" width="515" height="15" backcolor="#c0c0c0"/>  
        <box leftPadding="10" bottomBorder="1Point"/>  
        <text><![CDATA[Summary]]> </text> 
      </staticText>  
      <textField> 
        <reportElement x="420" y="1" width="30" height="15"/>  
        <textElement textAlignment="Right"/>  
        <textFieldExpression class="java.lang.Integer"> <![CDATA[$V{sum:hours_sum}]]> </textFieldExpression> 
      </textField> 
    </band> 
  </summary> 
</jasperReport>
