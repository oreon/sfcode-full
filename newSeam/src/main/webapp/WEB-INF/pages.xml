<?xml version="1.0" encoding="UTF-8"?>

<pages xmlns="http://jboss.com/products/seam/pages"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
       no-conversation-view-id="/home.jspx"
       login-view-id="/login.jspx">

	
	<page view-id="*">
        <navigation>
        	<rule if-outcome="home">
                <redirect view-id="/home.jspx"/>
            </rule>
        
            <rule if-outcome="customer">
                <redirect view-id="/admin/entities/domain/customer/listCustomer.jspx" />
            </rule>
        
            <rule if-outcome="product">
                <redirect view-id="/admin/entities/domain/product/listProduct.jspx" />
            </rule>
        
            <rule if-outcome="order">
                <redirect view-id="/admin/entities/domain/order/listOrder.jspx" />
            </rule>
        
            <rule if-outcome="item">
                <redirect view-id="/admin/entities/domain/item/listItem.jspx" />
            </rule>
        
        </navigation>
    </page>

    
    
    <page view-id="/admin/entities/domain/customer/editCustomer.jspx" >
    	<navigation> 
			 <rule if-outcome="save">
 				<redirect view-id="/admin/entities/domain/customer/viewCustomer.jspx" />
            </rule>	
             <rule if-outcome="cancel">
 				<redirect view-id="/admin/entities/domain/customer/viewCustomer.jspx" />
            </rule>			
		</navigation>
	</page>
	
	 <page view-id="/admin/entities/domain/customer/viewCustomer.jspx" >
