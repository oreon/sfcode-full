			 <rule if-outcome="edit">
 				<redirect view-id="/admin/entities/domain/customer/editCustomer.jspx" />
            </rule>	
             <rule if-outcome="cancel">
 				<redirect view-id="/admin/entities/domain/customer/listCustomer.jspx" />
            </rule>			
		</navigation>
	</page>
	
	<page view-id="/admin/entities/domain/customer/listCustomer.jspx" >
		<navigation>
			<rule if-outcome="select">
				<redirect view-id="/admin/entities/domain/customer/viewCustomer.jspx" />
			</rule> 
			 <rule if-outcome="edit">
 				<redirect view-id="/admin/entities/domain/customer/editCustomer.jspx" />
            </rule>			
		</navigation>
	</page>
    
