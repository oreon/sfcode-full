<?xml version="1.0" encoding="UTF-8"?>

<!-- Persistence deployment descriptor. -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	
	<persistence-unit name="${rootArtifactId}PersistenceUnit" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>${package}.domain.geog.Country</class>
		<class>${package}.domain.geog.State</class>
		<class>${package}.domain.user.User</class>
		<class>${package}.domain.role.Role</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.show_sql" value="true" />
         	<!-- <property name="hibernate.hbm2ddl.auto" value="update" /> -->
		</properties>
	</persistence-unit>
</persistence>